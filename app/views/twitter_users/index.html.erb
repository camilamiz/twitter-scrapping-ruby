<div class="container">
  <div class="row">
      <div class="col-sm-8 offset-sm-2">
      <%= form_tag twitter_users_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a twitter user"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
  </div>
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div id="twitter-users">
        <% @twitter_users.each do |user| %>
          <h4><%= user.name %></h4>
          <p><%= user.page_address %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>