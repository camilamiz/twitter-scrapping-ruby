<div class="container">
    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <form action="/twitter_users" method="post">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <label for="name">Name: </label>
                <input type="text" name="twitter_user[name]" id="name">
            
                <label for="address">Address: </label>
                <input type="text" name="twitter_user[page_address]" id="page-address">
            
                <input type="submit">
            </form>
        </div>
    </div>
</div>